{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["project_name", "instance_type", "instance_disk_size", "sites"],
  "additionalProperties": false,
  "properties": {
    "project_name": { "type": "string", "minLength": 1 },
    "instance_type": { "type": "string", "minLength": 1 },
    "instance_disk_size": { "type": "string", "minLength": 1,"pattern": "^[0-9]+$"},
    "sites": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["domain", "monitor_keyword", "user_password", "db_password"],
        "additionalProperties": false,
        "properties": {
          "domain": { "type": "string", "minLength": 1 },
          "monitor_keyword": { "type": "string", "minLength": 1 },
          "user_password": { "type": "string", "minLength": 1 },
          "db_password": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}